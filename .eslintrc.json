{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"no-const-assign": "error",
		"space-before-function-paren": "off",
		"no-undef": "off",
		"arrow-parens": "off",
		"prefer-const": "off"
	},
	"globals": {
		"dbHandler": "writable"
	}
}
