{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": [
			"warn",
			4
		],
		"linebreak-style": [
			"warn",
			"windows"
		],
		"quotes": [
			"warn",
			"double"
		],
		"semi": [
			"warn",
			"always"
		],
		"space-infix-ops": "warn",
		"comma-spacing": "warn",
		"no-spaced-func": "warn",
		"no-const-assign": "error",
		"space-before-function-paren": "off",
		"camelcase": "warn",
		"no-undef": "off",
		"arrow-parens": "off"
	},
	"globals": {
		"dbHandler": "writable"
	}
}
