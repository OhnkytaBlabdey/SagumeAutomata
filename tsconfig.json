{
  "compilerOptions": {
    "target": "ES3",
    "module": "CommonJS",
    "lib": ["ES6", "ES5", "ES7", "ES2018", "DOM"],
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
